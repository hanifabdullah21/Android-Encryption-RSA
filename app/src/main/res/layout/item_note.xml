<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp">

        <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/in_tv_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Sab"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/in_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Sab"
                    android:textSize="@dimen/_18sdp"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/in_tv_monthyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Mei, 2019"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/in_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="11:09 AM"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"/>

        </LinearLayout>

        <View android:layout_width="@dimen/_1sdp"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/_3sdp"
              android:layout_marginRight="@dimen/_3sdp"
              android:background="#000"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/in_tv_title_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/_5sdp"
                    tools:text="hahahaaaaaaaaaaaaaaaaaaaaaakjskajsdnkjcnaksj hasbjabsc"/>

            <TextView
                    android:id="@+id/in_tv_message_notes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:maxLines="3"
                    android:ellipsize="end"
                    tools:text="isi oasncajkbschascbakjsncakjsnckascakjsca ahjbcahs ahsbcajhsc kjasbcaksbc ajkscajksb kajscakjsbc ajksbcaksbc akjsbckjasbc aksbcaksbc kasbckajsbc asjncajkscsbchasbckhasbckhascakhsbcaksbckhasbcahksbc"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>