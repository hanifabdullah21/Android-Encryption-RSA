<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.EditProfilActivity"
        android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Edit Profil"
                      android:textSize="@dimen/_20sdp"
                      android:textColor="#000"
                      android:layout_gravity="center"/>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/_1sdp"
                  android:background="@color/gray_one"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"/>


            <!--Username-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="2.5"
                        android:textColor="#000"/>

                <EditText
                        android:id="@+id/epa_edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_edittext"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#000"
                        android:hint="Masukkan Username"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/_1sdp"
                  android:background="@color/gray_one"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah Kata Sandi"
                    android:textColor="#000"
                    android:textSize="@dimen/_14sdp"
            />

            <!--Password saat ini-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="2.5"
                        android:textColor="#000"/>

                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/epa_edt_password"
                          android:background="@drawable/background_edittext"
                          android:paddingLeft="@dimen/_10sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingBottom="@dimen/_8sdp"
                          android:paddingRight="@dimen/_5sdp"
                          android:textSize="@dimen/_12sdp"
                          android:textColor="#000"
                          android:inputType="textPassword"
                          android:hint="Masukkan Kata Sandi Saat ini"/>

            </LinearLayout>

            <!--Password saat ini-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password Baru"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="2.5"
                        android:textColor="#000"/>

                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/epa_edt_new_password"
                          android:background="@drawable/background_edittext"
                          android:paddingLeft="@dimen/_10sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingBottom="@dimen/_8sdp"
                          android:paddingRight="@dimen/_5sdp"
                          android:textSize="@dimen/_12sdp"
                          android:textColor="#000"
                          android:inputType="textPassword"
                          android:hint="Masukkan Kata Sandi Baru"/>

            </LinearLayout>

            <!--Password Konfirmasi-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Konfirmasi Password"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="2.5"
                        android:textColor="#000"/>

                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/epa_edt_confirm_password"
                          android:background="@drawable/background_edittext"
                          android:paddingLeft="@dimen/_10sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingBottom="@dimen/_8sdp"
                          android:paddingRight="@dimen/_5sdp"
                          android:textSize="@dimen/_12sdp"
                          android:textColor="#000"
                          android:inputType="textPassword"
                          android:hint="Masukkan Konfirmasi Pass..."/>

            </LinearLayout>

            <Button android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="SIMPAN"
                    android:textColor="#FFF"
                    android:id="@+id/epa_btn_save"
                    android:background="@drawable/background_button"
                    android:layout_marginTop="@dimen/_20sdp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>