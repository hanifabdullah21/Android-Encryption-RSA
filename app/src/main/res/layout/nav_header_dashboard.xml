<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="@dimen/_120sdp"
        android:padding="@dimen/_20sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
            android:id="@+id/nhd_iv_person"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person"
            android:layout_marginRight="@dimen/_20sdp"/>

    <TextView
            android:id="@+id/nhd_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nhd_iv_person"
            android:text="Selamat datang,"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000"/>

    <TextView
            android:id="@+id/nhd_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nhd_tv_welcome"
            android:layout_toRightOf="@id/nhd_iv_person"
            android:textSize="@dimen/_14sdp"
            android:textColor="#000"
            android:layout_marginTop="@dimen/_5sdp"
            tools:text="Hanif Abdullah"/>

</RelativeLayout>
