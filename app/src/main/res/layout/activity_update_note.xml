<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        android:focusableInTouchMode="true"
        tools:context=".main.UpdateNoteActivity">

    <TextView
            android:id="@+id/una_tv_date"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Terakhir diedit pada 13 Juli 2019"
            android:textSize="@dimen/_10sdp"/>

    <Button
            android:id="@+id/una_btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/background_button"
            android:text="SIMPAN"
            android:textColor="#FFF"
            android:layout_alignParentBottom="true"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/una_tv_date"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_above="@id/una_btn_save"
            android:layout_marginBottom="@dimen/_10sdp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/una_edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Judul"
                    android:background="@drawable/background_edittext"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            <EditText
                    android:id="@+id/una_edt_message"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Isi Pesan"
                    android:inputType="textMultiLine"
                    android:background="@drawable/background_edittext"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#000"
                    android:minHeight="@dimen/_150sdp"
                    android:gravity="top"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>